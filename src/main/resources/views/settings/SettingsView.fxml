<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="750.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.tamarit.widgetemt.controllers.settings.SettingsController">
   <children>
      <VBox fx:id="parada" alignment="CENTER_LEFT" spacing="15.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="5.0">
         <children>
            <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" spacing="10.0">
               <children>
                  <Label text="Buscar parada" />
                  <Separator HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <ComboBox fx:id="busStopCombo" editable="true" maxWidth="1.7976931348623157E308" prefHeight="30.0" promptText="%settings.combobox.busstop.proptext">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></ComboBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Línea:" />
                  <TextField fx:id="lineFilterText" prefWidth="50.0" promptText="Nº">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
                  <Label text="En blanco, TODAS" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="100.0">
               <children>
                  <CheckBox fx:id="adaptedCheck" mnemonicParsing="false" text="Sólo adaptados">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor></CheckBox>
                  <Button fx:id="addButton" alignment="CENTER" disable="true" graphicTextGap="10.0" mnemonicParsing="false" onAction="#addToFavourites" style="-fx-background-color: #3498db;" text="Añadir">
                     <graphic>
                        <ImageView fitHeight="22.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true" styleClass="addIcon" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="Añadir parada" />
                     </tooltip>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox fx:id="favoritos" alignment="CENTER_LEFT" spacing="15.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="178.0">
         <children>
            <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" spacing="10.0">
               <children>
                  <Label text="Paradas guardadas" />
                  <Separator HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <TableView fx:id="favouritesTableView" prefHeight="105.0">
              <placeholder>
			    <Label text="No hay paradas guardadas" />
			  </placeholder>
              <columns>
                <TableColumn fx:id="busStopColumn" maxWidth="255.0" prefWidth="255.0" resizable="false" sortable="false" text="Nombre" />
                <TableColumn fx:id="lineFilterColumn" maxWidth="60.0" prefWidth="60.0" resizable="false" sortable="false" style="-fx-alignment: CENTER;" text="Línea" />
                  <TableColumn fx:id="adaptedColumn" maxWidth="50.0" prefWidth="50.0" resizable="false" sortable="false" style="-fx-alignment: CENTER;">
                     <graphic>
                        <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true" styleClass="wheelchairIcon" />
                     </graphic>
                  </TableColumn>
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <Button fx:id="deleteButton" disable="true" graphicTextGap="10.0" mnemonicParsing="false" onAction="#deleteRowSelected" style="-fx-background-color: #3498db;" text="Eliminar">
               <graphic>
                  <ImageView fitHeight="22.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true" styleClass="trashIcon" />
               </graphic>
               <tooltip>
                  <Tooltip text="Elliminar" />
               </tooltip>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </VBox>
      <VBox fx:id="tajeta" alignment="CENTER_LEFT" spacing="15.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="376.0">
         <children>
            <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" spacing="10.0">
               <children>
                  <Label text="Conoce tu saldo" />
                  <Separator HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <TextField prefHeight="30.0" promptText="Número de tarjeta MÓBILIS" />
            <Button graphicTextGap="10.0" mnemonicParsing="false" prefHeight="30.0" style="-fx-background-color: #3498db;" text="Consultar">
               <graphic>
                  <ImageView fitHeight="22.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true" styleClass="eyeIcon" />
               </graphic>
               <tooltip>
                  <Tooltip text="Consultar Saldo" />
               </tooltip>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </VBox>
      <VBox fx:id="configuracion" alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="150.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
         <children>
            <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" spacing="10.0">
               <children>
                  <Label text="Configuración" />
                  <Separator HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="78.0">
               <children>
                  <CheckBox fx:id="alwaysOnTopCheck" mnemonicParsing="false" text="%settings.checkbox.always.top">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor></CheckBox>
                  <CheckBox fx:id="autoRefreshCheck" mnemonicParsing="false" text="%settings.checkbox.auto.refresh">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor></CheckBox>
               </children>
            </HBox>
            <CheckBox mnemonicParsing="false" text="Iniciar automáticamente al inicio del sistema">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></CheckBox>
         </children>
      </VBox>
      <VBox fx:id="idioma" alignment="CENTER" spacing="5.0" AnchorPane.bottomAnchor="55.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
         <children>
            <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" spacing="10.0">
               <children>
                  <Label text="Idioma" />
                  <Separator HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" spacing="50.0">
               <children>
                  <RadioButton fx:id="spanishRadioButton" mnemonicParsing="false">
                     <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" styleClass="castellanoFlag">
                           <cursor>
                              <Cursor fx:constant="DEFAULT" />
                           </cursor>
                        </ImageView>
                     </graphic>
                     <toggleGroup>
                        <ToggleGroup fx:id="languageGroup" />
                     </toggleGroup>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <tooltip>
                        <Tooltip text="%settings.language.spanish" />
                     </tooltip>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </RadioButton>
                  <RadioButton fx:id="catalanRadioButton" mnemonicParsing="false" toggleGroup="$languageGroup">
                     <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" styleClass="valencianoFlag">
                           <cursor>
                              <Cursor fx:constant="DEFAULT" />
                           </cursor>
                        </ImageView>
                     </graphic>
                     <tooltip>
                        <Tooltip text="%settings.language.catalan" />
                     </tooltip>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </RadioButton>
                  <RadioButton fx:id="englishRadioButton" mnemonicParsing="false" toggleGroup="$languageGroup">
                     <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" styleClass="inglesFlag">
                           <cursor>
                              <Cursor fx:constant="DEFAULT" />
                           </cursor>
                        </ImageView>
                     </graphic>
                     <tooltip>
                        <Tooltip text="%settings.language.english" />
                     </tooltip>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </RadioButton>
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox fx:id="botones" alignment="CENTER" cache="true" prefHeight="50.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#openWidgetViewConfirm" style="-fx-background-color: #2ecc71;" HBox.hgrow="ALWAYS">
               <graphic>
                  <ImageView fitHeight="28.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true" styleClass="confirmIcon" />
               </graphic>
               <tooltip>
                  <Tooltip text="%settings.button.save" />
               </tooltip>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#openWidgetViewCancel" style="-fx-background-color: #e74c3c;" HBox.hgrow="ALWAYS">
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true" styleClass="cancelIcon" />
               </graphic>
               <tooltip>
                  <Tooltip text="%settings.button.cancel" />
               </tooltip>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
